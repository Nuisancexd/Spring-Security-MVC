import org.springframework.security.core.authority.SimpleGrantedAuthority;
import org.testng.collections.Sets;

import java.util.Set;
import java.util.stream.Collectors;

import static why.me.SpringJPA.security.ApplicationRolePermission.*;

public enum ApplicationUserRole {

    STUDENT(Sets.newHashSet()),
    ADMIN(Sets.newHashSet(DIRECTION_READ, DIRECTION_WRITE, STUDENT_READ, STUDENT_WRITE)),
    OBSERVER(Sets.newHashSet(DIRECTION_READ, STUDENT_READ));

    private final Set<ApplicationRolePermission> permissions;

    ApplicationUserRole(Set<ApplicationRolePermission> permission) {
        this.permissions = permission;
    }


    public Set<ApplicationRolePermission> getPermissions() {
        return permissions;
    }

    public Set<SimpleGrantedAuthority> getGrantedAuthority() {
        Set<SimpleGrantedAuthority> permissions = getPermissions().stream()
                .map(permission -> new SimpleGrantedAuthority(permission.getPermission()))
                .collect(Collectors.toSet());
        permissions.add(new SimpleGrantedAuthority("ROLE_" + this.name()));
        return permissions;
    }
}
